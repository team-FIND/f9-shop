
<% @page_title = $cstaff.name %> 
<% @title2 = $cstaff.name %> 

<%= content_for(:main) do %>

	<% $cstaffs.each do |cstaff| %>

		<% if $cstaff.staff_img.present? %>
			<div class="mainImage"><%= image_tag $cstaff.staff_img_url %></div>
		<% else %>
			<div class="mainImage"><%= image_tag "template/logo3" %></div>
		<% end %>

	<% end %>
<% end %>

<%= content_for(:second_feature) do %>

			<% if $cstaff.explain.present? %>
					<p><%= $cstaff.explain %></p>
			<% else %>
					<p>未入力</p>
			<% end %>

<% end %>