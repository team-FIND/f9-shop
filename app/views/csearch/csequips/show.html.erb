
<% @page_title = $cequip.name %> 
<% @title2 = $cequip.name %> 

<%= content_for(:main) do %>
	<% $cequips.each do |cequip| %>

		<% if $cequip.equip_img.present? %>
			<div class="mainImage"><%= image_tag $cequip.equip_img_url %></div>
		<% else %>
			<div class="mainImage"><%= image_tag "template/logo3" %></div>
		<% end %>

	<% end %>
<% end %>

<%= content_for(:second_feature) do %>

			<% if $cequip.explain.present? %>
					<p><%= $cequip.explain %></p>
			<% else %>
					<p>未入力</p>
			<% end %>

<% end %>