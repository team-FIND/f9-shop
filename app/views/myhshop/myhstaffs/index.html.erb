
<%= content_for(:head)  do %>
    <%= stylesheet_link_tag "shophome/bshop/each_equip", :media => "all" %>
    <%= javascript_include_tag "city" %>
    <title><%= page_title %></title>

<% end %>

<%= content_for(:main)  do %>

  <%= link_to new_myhshop_myhstaffc_myhstaff_path do%><div id="new">＋設備を追加する</div><% end %>

  <% $hstaffs.each do |hstaff| %>

    <div id="each_equip">

        <div id="equip">
          
                <div id="top_pic"> 

                    <% if hstaff.staff_img.present? %>
                      <%= link_to image_tag(hstaff.staff_img_url), myhshop_myhstaffc_myhstaff_path(id:hstaff) %> 
                    <% else %>
                      <%= link_to image_tag("template/logo3"), myhshop_myhstaffc_myhstaff_path(id:hstaff) %> 
                    <% end %>
    
                </div>

                <P id="equip_name">
                    <% if hstaff.name.present? %>
                        <%= hstaff.name %>
                    <% else %>
                        （未入力）
                    <% end %>
                </P>

                <p id="edit">
                    <%= link_to '✐編集', edit_myhshop_myhstaffc_myhstaff_path(id:hstaff) %>
                </p>    

         </div>
    </div>


  <% end %>


<% end %>

