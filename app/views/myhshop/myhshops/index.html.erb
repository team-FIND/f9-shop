

  <% @page_title = "その他" %> 
  <% @title = @page_title %>
  <% @back = myshop_users_path %>


<%= content_for(:uheader)  do %>
<%= render 'shared/uheader2' %>
<div id="guide">マイページ＞ショップカテゴリー><%= @page_title %></div>
<div id="uname2"><P><%= current_user.username %>様</p></div>
<% end %>


<%= content_for(:main)  do %>
    <%= stylesheet_link_tag "shop/shop", :media => "all" %>
    <%= stylesheet_link_tag "search/asearch", :media => "all" %>

   <%= link_to home_new_myhshop_myhshops_path do%>
        <div id="new"><p>+店舗を追加する</p></div>
    <% end %>

<div id="main-feature">
  <% $hshops.each do |hshop| %>


      <%= link_to myhshop_myhshop_path(id:hshop)  do%> 
         <div id="shopx">

                <div id="toppic">

                  <% if hshop.topimage.present? %>
                    <%= image_tag hshop.topimage_url %> 
                  <% else %>
                    <%= image_tag("template/logo3", {:size =>'400x400'}) %> 
                  <% end %>

                </div>

                <div id="explains">
                     
                        <P id="shop_name"><%= hshop.shopname %></P>

                        <P id="account_name"><%= hshop.user.username %></P><br>
                        
                        <li id="ptag">
                          <p><%= hshop.top.name %></p>
                          <p>><%= hshop.area.name %></p>
                          <p>><%= hshop.prefec.name %></p>
                        </li><br>

                        <li id="tag"><p>#<%= hshop.hcategory.name %></p></li>
                </div>

          </div>

                <%= link_to home_edit_myhshop_myhshop_path(id:hshop) do%><br>
                  <div id="edittop"><p>✐編集する</p></div>
                <% end %>
                
        <% end %>

  <% end %>
  
</div>

<% end %>

