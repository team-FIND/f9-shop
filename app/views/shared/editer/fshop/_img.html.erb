

<%= stylesheet_link_tag "creater/ashop/home", :media => "all" %>


<%= form_for($fshop, :url => {:action => "create"}, :html => {:multipart => true}) do |form| %>

  <% if fshop.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(fshop.errors.count, "error") %> prohibited this fshop from being saved:</h2>

      <ul>
        <% fshop.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>

    </div>
    
  <% end %>       

        <div class="section" id="page">

            <h1>画像を編集する</h1>

                <div id="picup">

                       <div id="field-pic">
                          <%= form.label :shopimage1 do %><label for="labelx">お店の画像１</label><% end %><br>
                          <%= form.file_field :shopimage1, id: :fshop_shopimage1, id: "file1"  %>

                          <p><%= form.check_box :remove_shopimage1, seize: 50 %>画像を削除する</p>
                          <%= form.hidden_field :shopimage1_cache %>
                          <div id="thumb1" onClick="$('#file1').click()">
                            <% if fshop.shopimage1.present? %>
                              <div id="updimg"><%= image_tag fshop.shopimage1.thumb.url if $fshop.shopimage1? %></div> 
                            <% else %>
                              <div id="upimg"><%= image_tag("template/img") %></div>
                            <% end %>
                          </div>
                        </div>  

                        <div id="field-pic">
