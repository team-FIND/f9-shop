
<% @page_title = $fstaff.name %> 
<% @title2 = $fstaff.name %> 

<%= content_for(:edit) do %>
	<div id="edit">
    	<%= link_to '✐編集', staff_img_myfshop_myfstaffc_myfstaff_path(id:$fstaff) %>
    </div>    
<% end %>

<% $fstaffs.each do |fstaff| %>

	<% if $fstaff.staff_img.present? %>
		<% @image1 = image_tag $fstaff.staff_img_url %>
	<% else %>
		<% @image1 = image_tag "template/logo3" %>
	<% end %>

	<% if $fstaff.explain.present? %>
			<p><%= $fstaff.explain %></p>
	<% else %>
			<p>未入力</p>
	<% end %>

<% end %>