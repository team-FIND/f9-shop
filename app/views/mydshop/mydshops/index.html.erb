

  <% @page_title = "車・バイク・自転車" %> 
  <% @title = @page_title %>
  <% @back = myshop_users_path %>


<%= content_for(:uheader)  do %>
<%= render 'shared/uheader2' %>
<div id="guide">マイページ＞ショップカテゴリー><%= @page_title %></div>
<div id="uname2"><P><%= current_user.username %>様</p></div>
<% end %>


<%= content_for(:main)  do %>
    <%= stylesheet_link_tag "shop/shop", :media => "all" %>
    <%= stylesheet_link_tag "search/asearch", :media => "all" %>

   <%= link_to home_new_mydshop_mydshops_path do%>
        <div id="new"><p>+店舗を追加する</p></div>
    <% end %>

<div id="main-feature">
  <% $dshops.each do |dshop| %>


      <%= link_to mydshop_mydshop_path(id:dshop)  do%> 
         <div id="shopx">

                <div id="top_pic">

                  <% if dshop.topimage.present? %>
                    <%= image_tag dshop.topimage_url %> 
                  <% else %>
                    <%= image_tag "template/logo3" %> 
                  <% end %>

                </div>

                <div id="explains">
                     
                        <P id="shop_name"><%= dshop.shopname %></P>

                        <P id="account_name"><%= dshop.user.username %></P><br>
                        
                        <li id="ptag">
                          <p><%= dshop.top.name %></p>
                          <p>><%= dshop.area.name %></p>
                          <p>><%= dshop.prefec.name %></p>
                        </li><br>

                        <li id="tag"><p>#<%= dshop.dcategory.name %></p></li>
                </div>

          </div>

                <%= link_to home_edit_mydshop_mydshop_path(id:dshop) do%><br>
                  <div id="edittop"><p>✐編集する</p></div>
                <% end %>
                
        <% end %>

  <% end %>
  
</div>

<% end %>

