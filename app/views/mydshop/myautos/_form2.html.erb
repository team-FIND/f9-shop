<%= form_for($auto, :url => {:action => "create"}, :html => {:multipart => true}) do |form| %>

  <% if auto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(auto.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% auto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="section" id="page">

    <h1>料理を編集する</h1>

              <%= form.hidden_field :amenu_id %>

                  <div id="field-pic">
                      <%= form.label :autoimg1 do %><label for="labelx">写真1</label><% end %><br>

                      <label for="labely"><%= form.file_field :autoimg1, id: :auto_autoimg1 , id: "file1" %></label>

                      <div id="thumb1" onClick="$('#file1').click()">
                            <% if auto.autoimg1.present? %>
                              <div id="updimg"><%= image_tag auto.autoimg1.thumb.url if $auto.autoimg1? %></div> 
                            <% else %>
                              <div id="upimg"><%= image_tag("template/img") %></div>
                            <% end %>
                      </div>
                  </div>

                  <div id="field-pic">
                      <%= form.label :autoimg2 do %><label for="labelx">写真2</label><% end %><br>

