
<%= content_for(:head)  do %>
    <%= stylesheet_link_tag "shophome/bshop/each_equip", :media => "all" %>
    <%= javascript_include_tag "city" %>
    <title><%= page_title %></title>

<% end %>

<%= content_for(:main)  do %>

  <%= link_to new_mygshop_mygequipc_mygequip_path do%><div id="new">＋設備を追加する</div><% end %>

  <% $gequips.each do |gequip| %>

    <div id="each_equip">

        <div id="equip">
          
                <div id="top_pic"> 

                    <% if gequip.equip_img.present? %>
                      <%= link_to image_tag(gequip.equip_img_url), mygshop_mygequipc_mygequip_path(id:gequip) %> 
                    <% else %>
                      <%= link_to image_tag("template/logo3"), mygshop_mygequipc_mygequip_path(id:gequip) %> 
                    <% end %>
    
                </div>

                <P id="equip_name">
                    <% if gequip.name.present? %>
                        <%= gequip.name %>
                    <% else %>
                        （未入力）
                    <% end %>
                </P>

                <p id="edit">
                    <%= link_to '✐編集', edit_mygshop_mygequipc_mygequip_path(id:gequip) %>
                </p>    

         </div>
    </div>


  <% end %>


<% end %>

