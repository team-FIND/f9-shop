
<% @page_title = $gstaff.name %> 
<% @title2 = $gstaff.name %> 

<%= content_for(:edit) do %>
	<div id="edit">
    	<%= link_to '✐編集', staff_img_mygshop_mygstaffc_mygstaff_path(id:$gstaff) %>
    </div>    
<% end %>

<% $gstaffs.each do |gstaff| %>

	<% if $gstaff.staff_img.present? %>
		<% @image1 = image_tag $gstaff.staff_img_url %>
	<% else %>
		<% @image1 = image_tag "template/logo3" %>
	<% end %>

	<% if $gstaff.explain.present? %>
			<p><%= $gstaff.explain %></p>
	<% else %>
			<p>未入力</p>
	<% end %>

<% end %>