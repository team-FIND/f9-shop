
<%= form_for($gsmenuc, :url => {:action => "create"}, :html => {:multipart => true}) do |form| %>

  <% if gsmenuc.errors.any? %>
      <div id="error_explanation">
          <h2><%= pluralize(gsmenuc.errors.count, "error") %> prohibited this bmenuc from being saved:</h2>

          <ul>
              <% gsmenuc.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
          </ul>
      </div>
  <% end %>

  <div class="section" id="page">

    <h1>メニュー項目を編集する</h1>

      <%= form.hidden_field :gshop_id %>

      <div id="field">
