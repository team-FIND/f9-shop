          <%= form.text_field :name, placeholder: '例）スタンダードコース' %>
      </div>

      <div id="actions">
          <li><%= form.submit(:決定) %></li>
      </div>

      <%= link_to mygshop_mygshop_path(id:$gshop) do %>
          <div id="eback">編集を中止する</div>
      <% end %>

  </div>

<% end %>
