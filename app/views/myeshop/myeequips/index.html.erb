
<%= content_for(:head)  do %>
    <%= stylesheet_link_tag "shophome/bshop/each_equip", :media => "all" %>
    <%= javascript_include_tag "city" %>
    <title><%= page_title %></title>

<% end %>

<%= content_for(:main)  do %>

  <%= link_to new_myeshop_myeequipc_myeequip_path do%><div id="new">＋設備を追加する</div><% end %>

  <% $eequips.each do |eequip| %>

    <div id="each_equip">

        <div id="equip">
          
                <div id="top_pic"> 

                    <% if eequip.equip_img.present? %>
                      <%= link_to image_tag(eequip.equip_img_url), myeshop_myeequipc_myeequip_path(id:eequip) %> 
                    <% else %>
                      <%= link_to image_tag("template/logo3"), myeshop_myeequipc_myeequip_path(id:eequip) %> 
                    <% end %>
    
                </div>

                <P id="equip_name">
                    <% if eequip.name.present? %>
                        <%= eequip.name %>
                    <% else %>
                        （未入力）
                    <% end %>
                </P>

                <p id="edit">
                    <%= link_to '✐編集', edit_myeshop_myeequipc_myeequip_path(id:eequip) %>
                </p>    

         </div>
    </div>


  <% end %>


<% end %>

