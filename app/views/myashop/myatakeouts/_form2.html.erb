<%= form_for($atakeout, :url => {:action => "create"}, :html => {:multipart => true}) do |form| %>

  <% if atakeout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(atakeout.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% atakeout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="section" id="page">

    <h1>料理を編集する</h1>

              <%= form.hidden_field :atmenu_id %>

                  <div id="field-pic">
                      <%= form.label :foodimg1 do %><label for="labelx">写真1</label><% end %><br>

                      <label for="labely"><%= form.file_field :foodimg1, id: :atakeout_foodimg1 , id: "file1" %></label>

                      <div id="thumb1" onClick="$('#file1').click()">
                            <% if atakeout.foodimg1.present? %>
                              <div id="updimg"><%= image_tag atakeout.foodimg1.thumb.url if $atakeout.foodimg1? %></div> 
                            <% else %>
                              <div id="upimg"><%= image_tag("template/img") %></div>
                            <% end %>
                      </div>
                  </div>

                  <div id="field-pic">
                      <%= form.label :foodimg2 do %><label for="labelx">写真2</label><% end %><br>

