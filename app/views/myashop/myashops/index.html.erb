

  <% @page_title = "グルメ" %> 
  <% @title = @page_title %>
  <% @back = myshop_users_path %>


<%= content_for(:uheader)  do %>
<%= render 'shared/uheader2' %>
<div id="guide">マイページ＞ショップカテゴリー><%= @page_title %></div>
<div id="uname2"><P><%= current_user.username %>様</p></div>
<% end %>


<%= content_for(:main)  do %>
    <%= stylesheet_link_tag "shop/shop", :media => "all" %>
    <%= stylesheet_link_tag "search/asearch", :media => "all" %>

   <%= link_to home_new_myashop_myashops_path do%>
        <div id="new"><p>+店舗を追加する</p></div>
    <% end %>

<div id="main-feature">
  <% $ashops.each do |ashop| %>


      <%= link_to myashop_myashop_path(id:ashop)  do%> 
         <div id="shopx">

                <div id="toppic">

                  <% if ashop.topimage? %>
                    <%= image_tag ashop.topimage.to_s %> 
                  <% else %>
                    <%= image_tag "template/logo3" %> 
                  <% end %>

                </div>

                <div id="explains">
                     
                        <P id="shop_name"><%= ashop.shopname %></P>

                        <P id="account_name"><%= ashop.user.username %></P><br>
                        
                        <li id="ptag">
                          <p><%= ashop.top.name %></p>
                          <p>><%= ashop.area.name %></p>
                          <p>><%= ashop.prefec.name %></p>
                        </li><br>

                        <li id="tag"><p>#<%= ashop.acategory.name %></p></li>
                </div>

          </div>

                <%= link_to home_edit_myashop_myashop_path(id:ashop) do%><br>
                  <div id="edittop"><p>✐編集する</p></div>
                <% end %>
                
        <% end %>

  <% end %>
  
</div>

<% end %>

