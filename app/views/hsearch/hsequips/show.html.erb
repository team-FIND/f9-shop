
<% @page_title = $hequip.name %> 
<% @title2 = $hequip.name %> 

<%= content_for(:main) do %>
	<% $hequips.each do |hequip| %>

		<% if $hequip.equip_img.present? %>
			<div class="mainImage"><%= image_tag $hequip.equip_img_url %></div>
		<% else %>
			<div class="mainImage"><%= image_tag "template/logo3" %></div>
		<% end %>

	<% end %>
<% end %>

<%= content_for(:second_feature) do %>

			<% if $hequip.explain.present? %>
					<p><%= $hequip.explain %></p>
			<% else %>
					<p>未入力</p>
			<% end %>

<% end %>