
<%= content_for(:head)  do %>
    <%= stylesheet_link_tag "shophome/bshop/each_staff", :media => "all" %>
    <%= javascript_include_tag "city" %>
    <title><%= page_title %></title>

<% end %>

<%= content_for(:main)  do %>

  <% $gstaffs.each do |gstaff| %>

    <div id="each_staff">

        <div id="staff">
          
                <div id="top_pic"> 

                    <% if gstaff.staff_img.present? %>
                      <%= link_to image_tag(gstaff.staff_img_url), gsearch_gsstaffc_gsstaff_path(id:gstaff) %> 
                    <% else %>
                      <%= link_to image_tag("template/logo3"), gsearch_gsstaffc_gsstaff_path(id:gstaff) %> 
                    <% end %>
    
                </div>

                <P id="staff_name">
                    <% if gstaff.name.present? %>
                        <%= gstaff.name %>
                    <% else %>
                        （未入力）
                    <% end %>
                </P>

         </div>
    </div>


  <% end %>


<% end %>

